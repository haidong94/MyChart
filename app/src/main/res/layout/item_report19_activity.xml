<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:background="@drawable/border">
        <TableRow>
            <TextView
                android:id="@+id/tv_STT"
                android:textColor="@color/colorBlack"
                android:text="STT"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border"/>
            <TextView
                android:id="@+id/tv_MaSo"
                android:textColor="@color/colorBlack"
                android:text="Mã số theo danh mục do BYT ban hành"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border"/>
            <TextView
                android:id="@+id/tv_TenVTYT"
                android:textColor="@color/colorBlack"
                android:text="Tên VTYT theo danh mục do BYT ban hành"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border"/>
            <TextView
                android:id="@+id/tv_TenTM"
                android:textColor="@color/colorBlack"
                android:text="Tên thương mại"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border"/>
            <TextView
                android:id="@+id/tv_QuyCach"
                android:textColor="@color/colorBlack"
                android:text="Quy cách"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border"/>
            <TextView
                android:id="@+id/tv_DonViTinh"
                android:textColor="@color/colorBlack"
                android:text="Đơn vị tính"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border"/>
            <TextView
                android:id="@+id/tv_GiaMuaVao"
                android:textColor="@color/colorBlack"
                android:text="Giá mua vào"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="1">
                <TextView
                    android:id="@+id/tv_NgoaiTru"
                    android:textColor="@color/colorBlack"
                    android:text="Ngoại Trú"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="@drawable/border"/>
                <TextView
                    android:id="@+id/tv_NoiTru"
                    android:textColor="@color/colorBlack"
                    android:text="Nội Trú"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="@drawable/border"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_GiaTTBHYT"
                android:textColor="@color/colorBlack"
                android:text="Giá thanh toán BHYT"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border"/>
            <TextView
                android:id="@+id/tv_ThanhTien"
                android:textColor="@color/colorBlack"
                android:text="Thành tiền"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border"/>
        </TableRow>
    </TableLayout>

</LinearLayout>